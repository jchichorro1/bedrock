  <script>
    // Script JavaScript para manipular o slogan dinâmico
    const sloganElement = document.getElementById('slogan');
    const slogans = [
      "Aprenda IA Generativa no seu próprio ritmo",
      "Descubra novas paixões com IA",
      "Expanda seus horizontes com Bedrock"
    ];

    let currentIndex = 0;

    function changeSloganText() {
      sloganElement.textContent = slogans[currentIndex];
      currentIndex = (currentIndex + 1) % slogans.length;
    }

    setInterval(changeSloganText, 3000);
  </script>
